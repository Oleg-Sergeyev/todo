div class = 'mb-3' style ='margin-left: 15px;'
  div class = 'mb-3' style ='margin-left: 10px;'
    p#notice = notice

    p 
      strong Name:
      =< @event.name
    p
      strong Content:
      =< @event.content
    p 
      strong Done:
      =< @event.done
    p 
      strong Items:
      table 
        - @event.items.order(created_at: :desc).each_with_index do |item, i|
          tr
            td = i + 1
            td = link_to item.name, edit_event_item_path(item, { event_id: @event.id } )
    div class = 'mb-3'
      => link_to 'Edit', edit_event_path(@event), class: 'btn btn-primary'
      
      =< link_to 'Back', events_path, class: 'btn btn-primary'
