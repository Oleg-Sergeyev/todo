
div class = 'main-container mb-3' style ='margin: 5px; padding: 5px;'
  div style ='margin-left: 15px;'
    h1 Список основных заданий
    p
  div id = 'date' class = 'mb-3' style ='margin: 0 10px 0 15px;'
    == render 'form_journal_panel'
  div id = 'paginate' class = 'mb-3' style ='margin-left: 15px;'
    = paginate @events
  div id = 'date_view' class = 'mb-3' style ='margin-left: 15px;'
    b Выборка за период: 
    b =@start_date.strftime("%d-%m-%Y, %H:%M")
    b  - 
    b =@final_date.strftime("%d-%m-%Y, %H:%M")
  div id = 'table_view' class = 'mb-1' style ='margin: 10px;'
    table.table.table-striped class ='table table-striped' style ='margin: 5px;'
      thead
        tr
          th N
          th Пользователь
          th Задание 
          th Дата создания
          th Подзадания 
          th Изменить
          th Удалить
      tbody
        - @events.order(created_at: :desc).each_with_index do |event, index|
          tr
            td = (index + 1) + (@events.count * @events.current_page) - @events.count
            td = @users.find(event.user_id).name
            td = link_to event.name, event
            td = event.created_at.strftime("%d-%m-%Y, %H:%M")
            td = event.items.count
            td = link_to 'Edit', edit_event_path(event)
            td = link_to 'Destroy', event, data: { confirm: 'Are you sure?' }, method: :delete
    p
  div id = 'date_view' class = 'mb-3' style ='margin-left: 15px;'
    = link_to 'Создать новое задание', new_event_path, class: 'btn btn-primary'
  p 
  div id = 'paginate' class = 'mb-1' style ='margin-left: 15px;'
    = paginate @events
