h1 =t('activerecord.attributes.event.list_items')

div id = 'table_items' class = 'mb-3' style ='margin: 10px;'
  table.table.table-striped class ='table table-striped' style ='margin: 5px;'
    thead
      tr
        th =t('â„–')
        th =t('activerecord.attributes.item.name')
        th =t('activerecord.attributes.item.done')
        th =t('activerecord.attributes.item.finished_at')
    tbody
      - @event_items.each_with_index do |item, index|
        tr
          td = (index + 1)
          td = link_to item.name, event_item_path(item)
